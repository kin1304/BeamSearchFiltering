# Beam Search Filter Pipeline Configuration
# Copy this file to .env and adjust values as needed

# OpenAI API Configuration (Required for entity extraction)
OPENAI_KEY=your_openai_api_key_here

# Pipeline Configuration
DEFAULT_BEAM_WIDTH=40
DEFAULT_MAX_DEPTH=120
DEFAULT_MAX_PATHS=200
DEFAULT_MIN_RELEVANCE_SCORE=0.15
DEFAULT_MAX_FINAL_SENTENCES=30

# Advanced Filtering Options
DEFAULT_USE_SBERT=false
DEFAULT_USE_CONTRADICTION_DETECTION=false
DEFAULT_USE_NLI=false

# POS Filtering Configuration
DEFAULT_ENABLE_POS_FILTERING=true
DEFAULT_IMPORTANT_POS_TAGS=N,Np,V,A,Nc,M,R,P

# VnCoreNLP Configuration
DEFAULT_VNCORENLP_PATH=./vncorenlp

# Output Configuration
DEFAULT_OUTPUT_DIR=output
DEFAULT_ENABLE_STATISTICS=true

# OpenAI Parameters
DEFAULT_OPENAI_MODEL=gpt-4o-mini
DEFAULT_OPENAI_TEMPERATURE=0.0
DEFAULT_OPENAI_MAX_TOKENS=1000

# Performance Optimization
DEFAULT_CPU_FALLBACK=true
CPU_BEAM_WIDTH=20
CPU_MAX_DEPTH=60
CPU_MAX_PATHS=100

# Development/Testing
DEFAULT_ENABLE_LOGGING=true
DEFAULT_LOG_LEVEL=INFO
